@page "/auth/register"
@model Todo.Web.pages.Auth.RegisterModel

<h1>Register</h1>

<form method="post">
    <div>
        <label>Email</label>
        <input asp-for="Input.Email" />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Input.Password" type="password" />
    </div>
    <button type="submit">Register</button>
</form>

@if (Model.Message is not null)
{
    <p>@Model.Message</p>
}

<a asp-page="/Auth/Login">Login</a>